pipeline {
    agent {
        label "ANSIBLE"
    }

   

    stages {

        stage('Find the Server') {
            steps {

                echosh 
                    
          
            }
        }

        stage('Deploy to DEV Env') {
            when {
                environment name: 'ENV', value: 'dev'
            }
            steps {
                sh 'echo ansible-playbook .....'
            }
        }

        stage('Deploy to PROD Env') {
            when {
                environment name: 'ENV', value: 'prod'
            }
            steps {
                sh 'echo ansible-playbook .....'
            }
        }

    }
}
